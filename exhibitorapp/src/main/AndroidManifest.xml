<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eastfair.exhibitorapp">

    <!--照相-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--拨打电话-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!--请求网络-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoTitle">

        <activity android:name=".ui.activity.MainActivity">

        </activity>
        <activity android:name=".ui.activity.LogoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.login.LoginActivity">
        </activity>
        <activity android:name=".ui.activity.capture.BarcodeScannerActivity"></activity>
        <activity android:name=".ui.activity.capture.CaptureActivity"></activity>
        <activity android:name=".ui.activity.SendDemandActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity android:name=".ui.activity.exhibits.ExhibitsDetailActivity"></activity>
        <activity android:name=".ui.activity.exhibits.ExhibitsListActivity"></activity>
        <activity android:name=".ui.activity.ExportActivity"></activity>
        <activity android:name=".ui.activity.exhibits.ExhibitsSearchActivity"></activity>
        <activity android:name=".ui.activity.WelcomeActivity"></activity>
        <activity android:name=".ui.activity.message.MessageDetailActivity"></activity>
        <activity android:name=".ui.activity.login.InfoActivity"></activity>
        <activity android:name=".ui.activity.login.AddPeopleActivity"></activity>
        <activity android:name=".ui.activity.exhibits.AddExhibitsActivity"></activity>
        <activity android:name=".ui.activity.message.RedPackageListActivity"></activity>
        <activity android:name=".ui.activity.DetailActivity"></activity>
        <activity android:name=".ui.activity.exhibitors.ExhibitorsDetailActivity"></activity>
    </application>

</manifest>